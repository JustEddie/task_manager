<div class="section">
    <%= simple_form_for(:comment, url: comments_path ) do |f| %>
    <div class="field">
        <div class="control">
            <h3>New Comment</h3>
            <%= f.input :content, input_html: {class: "textarea"}, wrapper: false%>
        </div>
    </div>

    <%= f.button :submit, "Create Comment", class: "button is-primary" %>
    <% end %>
</div>