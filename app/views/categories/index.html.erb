
<h1>Categories</h1>

<div class="section">
    <div class="container">
        <%= @categories.each do |category| %>
            <div class="card">
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <h3><%= link_to category.name, category %></h3>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
