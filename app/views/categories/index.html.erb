
<div class="section">
    <div class="container">
    <%= button_to "Add new category", '/categories/new', method: :get, class:"button" %>
            <% @categories.each do |category| %>
                <div class="card">
                    <div class="card-content">
                        <div class="media">
                            <div class="media-content">
                                <%= render category %>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
            

    </div>
</div>
