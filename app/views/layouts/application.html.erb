<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> %>
  </head>

  <body>
      	<section class="hero is-primary is-medium">
	  <!-- Hero head: will stick at the top -->
	  <div class="hero-head">
	    <nav class="navbar">
	      <div class="container">
	        <div class="navbar-brand">
	          <h1><%= link_to 'My Everyday Task Manger', root_path, class: "navbar-item" %></h1>
	          <span class="navbar-burger burger" data-target="navbarMenuHeroA">
	            <span></span>
	            <span></span>
	            <span></span>
	          </span>
	        </div>
	        <div id="navbarMenuHeroA" class="navbar-menu">
	          <div class="navbar-end">
              <% if logged_in? %>
               <h1>You are logged in as: <%= current_user.first_name %></h1>
               <div>
			   	<%= button_to "Categories", categories_path, method: :get, class:"navbar-item button is-link" %>
			   </div>
               <%= button_to "Log Out",'/sessions/destroy', method: :delete, class:"navbar-item button is-danger" %>
              <% else %>
                <div class="buttons">
                  <%= button_to "Log In!", login_path, class:"navbar-item button is-success" %>
                  <%= button_to "Sign Up!",'/users/new', method: :get, class:"navbar-item button is-link" %>
                </div>
              <%end %>
	          </div>
	        </div>
	      </div>
	    </nav>
	  </div>

	  <!-- Hero content: will be in the middle -->
	  <div class="hero-body">
	    <div class="container has-text-centered">
	      <h1 class="title">
	        <%= yield :page_title %>
	      </h1>
	    </div>
	  </div>
	</section>
    <%= yield %>
  </body>
</html>
