<h1 class="title">New User Form</h1>

<div class="section">
    <%= simple_form_for @user do |f| %>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message|%>
                <div>
                    <%= message %>
                </div>
            <% end %>
        </div>
    <% end %>
    <div class="field">
        <div class="control">
            <%= f.input :email, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}%>
        </div>
    </div>
    <div class="field">
        <div class="control">
            <%= f.input :password, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}%>
        </div>
    </div>
        <div class="field">
        <div class="control">
            <%= f.input :first_name, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}%>
        </div>
    </div>
        <div class="field">
        <div class="control">
            <%= f.input :last_name, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"}%>
        </div>
    </div>
    <%= f.button :submit, "Sign Up", class: "button is-primary" %>
    <% end %>
</div>